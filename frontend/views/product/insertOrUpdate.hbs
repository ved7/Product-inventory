<h3>{{viewTitle}}</h3>

<form action="/product" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{product._id}}">
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" name="name" placeholder="product title" value="{{product.name}}">
        <div class="text-white bg-danger">
            {{product.nameError}} </div>
    </div>
    <div class="form-group">
        <label>Product Colour</label>
        <input type="text" class="form-control" name="colour" placeholder="eg.red" value="{{product.colour}}">
    </div>

    <div class="form-group">
        <label>Price(in â‚¹)</label>
        <input type="number" class="form-control" name="price" placeholder="in Rs" value="{{product.price}}">
        <div class="text-white bg-danger">
            {{product.priceError}} </div>
    </div>
    <div class="form-group">
        <label>Quantity(stock)</label>
        <input type="number" class="form-control" name="quantity" placeholder="in number" value="{{product.quantity}}">
    </div>

    <div class="form-group d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-success btn-lg" style="margin-right: 15px;"><i
                class="fa fa-cart-plus fa-lg"></i> Add Product </button>
        <a class="btn btn-outline-secondary btn-lg" href="/product/list"><i class="fa fa-list-ul fa-lg"></i> View All
            Products</a>
    </div>
</form>